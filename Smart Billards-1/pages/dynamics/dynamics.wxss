/* pages/dynamics/dynamics.wxss */
.list{width: 750rpx; height:80rpx;justify-content: space-around; display: flex; color: #939394; }
.list .txt{box-sizing: border-box; height: 80rpx; font-size:25rpx; padding-top: 20rpx;}

.interval{background-color: #f0f0f0; width:750rpx; height: 20rpx; border-radius: 10rpx;}

.news{width:750rpx; height:200rpx; justify-content: space-between; display: flex;}
.news .title{box-sizing: border-box;}
.news .title .info{font-size: 30rpx; margin-left: 30rpx; margin-top: 40rpx; font-weight: bolder;}
.news .title .date{font-size: 20rpx; color: #dbd8d8; margin-top: 10rpx; margin-left: 30rpx;}
.news .img{box-sizing: border-box; width:50%; height:100%; padding: 20rpx;}

.bottom{font-size: 20rpx; background-color: #f0f0f0; text-align: center; color:rgb(167, 164, 164);padding-bottom: 20rpx;}